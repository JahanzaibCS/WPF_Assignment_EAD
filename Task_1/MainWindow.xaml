<Window x:Class="Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" Width="300">
        <Button Content="Create User" Width="300" Height="50" FontSize="20" Click="Button_Click"></Button>
        <Button Content="Show ALL Users" Width="300" Height="50" Margin="0,20,0,20" FontSize="20" Click="Button_Click_1"></Button>
        <Button Content="Exit" Width="300" Height="50" FontSize="20" Click="Exit"/>
    </StackPanel>
</Window>
